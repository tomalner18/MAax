Bootstrap: library
From: airl_lab/default/airl_env:base_ci


%labels Author tomalner18@gmail.com
    Version v0.0.1

%post
  # Update 
  apt-get update
  apt-get upgrade -y
  DEBIAN_FRONTEND=noninteractive apt-get install -y python3-git python3-matplotlib python3-pip libsdl1.2-dev libomp-dev
  apt-get install -y gcc
  rm -rf /var/lib/apt/lists/*

  # Python libraries
  pip3 install --upgrade pip setuptools wheel
  pip3 install --upgrade pip
  pip3 install brax==0.9.0
  pip3 install click==8.1.3
  pip3 install flax==0.6.9
  pip3 install gym==0.26.2
  pip3 install jax==0.4.9
  pip3 install numpy==1.24.3
  pip3 install numpy_stl==2.10.1
  pip3 install pyhull==2015.2.1
  pip3 install scipy==1.10.1
  pip3 install typing_extensions==4.6.1
  pip3 install xmltodict==0.12.0

  # Create working directory
  mkdir /FYP

  # Clone repo
  git clone git@github.com:tomalner18/MAax.git
  cd MAax
  git checkout ..
  cd ..  

%runscript
   # Run main
   python3 notebooks/benchmarking/system/benchmark.py

